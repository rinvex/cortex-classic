{
    "name": "rinvex/cortex",
    "description": "Rinvex Cortex is a solid foundation for enterprise solutions, that provides a flexible and extensible architecture for building multi-lingual, multi-tenant applications with content management, themeable views, application modules and much more.",
    "keywords": [
        "rinvex",
        "cortex",
        "flexible",
        "framework",
        "laravel",
        "themes",
        "solution",
        "extension",
        "enterprise",
        "application",
        "multi-lingual",
        "multi-tenant",
        "bootstrap",
        "module"
    ],
    "type": "project",
    "license": "MIT",
    "homepage": "https://rinvex.com",
    "support": {
        "email": "help@rinvex.com",
        "issues": "https://github.com/rinvex/cortex/issues",
        "source": "https://github.com/rinvex/cortex",
        "docs": "https://github.com/rinvex/cortex/blob/master/README.md"
    },
    "authors": [
        {
            "name": "Rinvex LLC",
            "homepage": "https://rinvex.com",
            "email": "help@rinvex.com"
        },
        {
            "name": "Abdelrahman Omran",
            "homepage": "https://omranic.com",
            "email": "me@omranic.com",
            "role": "Project Lead"
        },
        {
            "name": "The Generous Laravel Community",
            "homepage": "https://github.com/rinvex/cortex/contributors"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "aws/aws-sdk-php": "^3.56.0",
        "aws/aws-sdk-php-laravel": "^3.1.0",
        "beyondcode/laravel-self-diagnosis": "^0.4.0",
        "cortex/auth": "dev-develop",
        "cortex/auth-b2b2c2": "dev-develop",
        "cortex/categories": "dev-develop",
        "cortex/console": "dev-develop",
        "cortex/contacts": "dev-develop",
        "cortex/foundation": "dev-develop",
        "cortex/pages": "dev-develop",
        "cortex/tags": "dev-develop",
        "cortex/tenants": "dev-develop",
        "doctrine/dbal": "^2.7.0",
        "laravel/envoy": "~1.4.0",
        "laravel/framework": "~5.6.0",
        "laravel/tinker": "^1.0.0",
        "league/flysystem-aws-s3-v3": "^1.0.0",
        "mariuzzo/laravel-js-localization": "^1.4.0",
        "predis/predis": "^1.1.1",
        "roave/security-advisories": "dev-master",
        "spatie/laravel-db-snapshots": "^1.1.0",
        "spatie/laravel-link-checker": "^4.1.0",
        "spatie/laravel-medialibrary": "^7.3.0",
        "wnx/laravel-stats": "^1.7.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.1.0",
        "barryvdh/laravel-ide-helper": "^2.4.0",
        "beyondcode/laravel-dump-server": "^1.1.0",
        "codedungeon/phpunit-result-printer": "^0.19.0",
        "filp/whoops": "^2.1.0",
        "fzaninotto/faker": "~1.7.0",
        "itsgoingd/clockwork": "^2.2.0",
        "mockery/mockery": "^1.1.0",
        "nunomaduro/collision": "^2.0.0",
        "nunomaduro/larastan": "^0.1.0",
        "phpunit/phpunit": "^7.0.0",
        "symfony/thanks": "^1.0.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate",
            "npm install --silent"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan ide-helper:generate",
            "@php artisan laroute:generate",
            "@php artisan package:discover",
            "@php artisan ide-helper:meta"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "dont-discover": [
                "silber/bouncer",
                "mariuzzo/laravel-js-localization"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
